{
    "name": "bcrowe/cakephp-api-pagination",
    "description": "CakePHP 4 plugin that injects pagination information into API responses.",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp", "api", "pagination", "cakephp3"
    ],
    "homepage": "https://github.com/bcrowe/cakephp-api-pagination",
    "license": "MIT",
    "authors": [
        {
            "name": "Bryan Crowe",
            "email": "bryan@bryan-crowe.com",
            "homepage": "http://bryan-crowe.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1",
        "cakephp/cakephp": "^4.0-dev"
    },
    "require-dev": {
        "phpunit/phpunit" : "^5.0|^7.0",
        "scrutinizer/ocular": "1.1",
        "squizlabs/php_codesniffer": "~2.3.0"
    },
    "autoload": {
        "psr-4": {
            "BryanCrowe\\ApiPagination\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BryanCrowe\\ApiPagination\\": "src",
            "BryanCrowe\\ApiPagination\\Test\\": "tests",
            "BryanCrowe\\ApiPagination\\TestApp\\": "tests/test_app/TestApp"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
